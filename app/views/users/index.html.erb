<div class="container mt-3">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/left', book: @book, user: @user %>
    </div>

    <div class="offset-md-1 col-md-8">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th class="col-md-2">Image</th>
            <th class="col-md-5">Name</th>
            <th class="col-md-5"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="col-md-2">
                <%= link_to user_path(user.id) do %>
                  <%= image_tag user.get_profile_image(100,100) %>
                <% end %>
              </td>
              <td class="col-md-5">
                <%= user.name %>
              </td>
              <td class="col-md-5">
                <%= link_to 'Show', user_path(user.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>