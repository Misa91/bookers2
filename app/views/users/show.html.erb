<div class="container mt-3">
  <div class="row">
    <div class="col-4">
      <%= render 'books/left', book: @book, user: @user %>
    </div>

    <div class="col-8">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th class="col-1"></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag @user.get_profile_image(100,100) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>