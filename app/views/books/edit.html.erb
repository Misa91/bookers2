<div class="container mt-3">
  <div class="row">
    <h2>Editing Book</h2>
  </div>

  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @book do |f| %>
  <div class="row">
    <div class="col col-2">
      <label for="inputName">Name</label>
    </div>
    <div class="col col-5">
      <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"name"%>
    </div>
  </div>

  <div class="row">
    <div class="col col-2">
      <label for="inputOpinion">Opinion</label>
    </div>
    <div class="col col-5">
      <%= f.text_field :body, autofocus: true, id:"inputBody", placeholder:"opinion"%>
    </div>
  </div>

  <div class="row">
    <div class='form-group'>
      <%= f.submit 'Update Book', class:'btn btn-sm btn-success' %>
    </div>
  </div>
  <% end %>

  <div class="row">
    <p><%= link_to "Show", book_path(@book.id) %></p>
    <p><%= link_to "Back", books_path %></p>
  </div>
</div>