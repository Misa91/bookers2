<div class="container mt-3">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'left', book: @book, user: @user %>
    </div>

    <div class="col-lg-8">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
            <tr>
              <td class="col-lg-1">
                <%= image_tag @user.get_profile_image(100,100) %>
                <%= link_to @book.user.name, user_path(@book.user.id) %>
              </td>
              <td class="col-lg-3"><%= link_to @book.title, book_path(@book.id) %></td>
              <td class="col-lg-3"><%= @book.body %></td>
              <% if @book.user == current_user %>
                <td><%= button_to 'Edit', edit_book_path(@book.id), method: :get %></td>
                <td><%= button_to 'Destroy', book_path(@book.id), method: :delete %></td>
                <!--<td>%= button_to 'Destroy', class: "btn btn-sm btn-danger", {controller: books, action: destroy}, {method: :delete} %></td>-->
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>