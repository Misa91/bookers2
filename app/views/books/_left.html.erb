<div class="container mt-1">
  <!-- ユーザーの詳細 -->
    <h2>User info</h2>
    <%= image_tag user.get_profile_image(100,100) %>
    <p>name：<%= user.name %></p>
    <p>Introduction：<%= user.introduction %></p>
    <%= link_to edit_user_path(@user.id), :method => :get do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
    <br>

  <!-- 新規投稿部分 -->
    <h2>New book</h2>
    <%= form_with model: book do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %>
      <div class='form-group'>
        <%= f.submit 'Create Book', class:'btn btn-sm btn-success' %>
      </div>
    <% end %>
</div>